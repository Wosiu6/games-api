{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Debug"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "games-route": {
        "ClusterId": "games-cluster",
        "Match": {
          "Path": "/api/games/{**catch-all}"
        }
      },
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/identity/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "games-cluster": {
        "Destinations": {
          "games-api": {
            "Address": "http://games-api:7001/"
          }
        }
      },
      "identity-cluster": {
        "Destinations": {
          "identity-api": {
            "Address": "http://identity-api:7002/"
          }
        }
      }
    }
  }
}